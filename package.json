{
  "name": "workspace-smart-search",
  "publisher": "alonpe",
  "displayName": "Workspace Smart Search",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.108.1"
  },
  "activationEvents": [
    "onFileSystem:isfs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "intersystems-tools",
          "title": "InterSystems Tools",
          "icon": "$(search-stop)"
        }
      ]
    },
    "views": {
      "intersystems-tools": [
        {
          "id": "isfsBookmarksView",
          "name": "Bookmarks"
        }
      ]
    },
    "commands": [
      {
        "command": "workspace-smart-search.directGoTo",
        "title": "InterSystems: Jump to Label^Routine",
        "category": "InterSystems"
      },
      {
        "command": "workspace-smart-search.toggleBookmark",
        "title": "InterSystems: Toggle Bookmark",
        "category": "InterSystems"
      },
      {
        "command": "workspace-smart-search.jumpBookmark",
        "title": "InterSystems: Next Bookmark",
        "category": "InterSystems"
      },
      {
        "command": "workspace-smart-search.clearBookmarks",
        "title": "InterSystems: Clear All Bookmarks",
        "category": "InterSystems"
      },
      {
        "command": "workspace-smart-search.deleteSingleBookmark",
        "title": "Delete Bookmark",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "workspace-smart-search.deleteSingleBookmark",
          "when": "view == isfsBookmarksView",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "workspace-smart-search.directGoTo",
        "key": "ctrl+alt+g",
        "when": "vscode-objectscript.connectActive"
      },
      {
        "command": "workspace-smart-search.toggleBookmark",
        "key": "ctrl+f2",
        "when": "editorTextFocus && vscode-objectscript.connectActive"
      },
      {
        "command": "workspace-smart-search.jumpBookmark",
        "key": "f2",
        "when": "editorTextFocus && vscode-objectscript.connectActive"
      },
      {
        "command": "workspace-smart-search.clearBookmarks",
        "key": "ctrl+alt+f2",
        "when": "editorTextFocus && vscode-objectscript.connectActive"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/node": "22.x",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlonPeleg/workspace-smart-search"
  }
}